<?xml version="1.0" encoding="utf-8"?>
<xs:schema
  attributeFormDefault="unqualified"
  elementFormDefault="qualified"
  targetNamespace="http://schemas.microsoft.com/appx/2012/ProductDescription"
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:tns="http://schemas.microsoft.com/appx/2012/ProductDescription">

  <xs:attributeGroup name="LocIdAttribute">
    <xs:attribute name="_locID" type="xs:string" use="optional"/>
  </xs:attributeGroup>

  <xs:simpleType name="ReleaseString">
    <xs:restriction base="xs:normalizedString">
      <xs:pattern value="\s*(\S(\r|\n|.){0,254}\s*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="KeywordString">
    <xs:restriction base="xs:normalizedString">
      <xs:pattern value="\s*(\S(\r|\n|.){0,29}\s*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="DescriptionString">
    <xs:restriction base="tns:NonNullNormalizedString">
      <xs:pattern value="\s*(\S(\r|\n|.){0,9999}\s*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="NotesString">
    <xs:restriction base="xs:string">
      <xs:pattern value="\s*(\S(\r|\n|.){0,1499}\s*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="AppFeatureString">
    <xs:restriction base="xs:string">
      <xs:pattern value="\s*(\S(\r|\n|.){0,199}\s*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="LangCodeString">
    <xs:restriction base="xs:normalizedString">
      <xs:pattern value="\s*(\S(\r|\n|.){0,29}\s*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:attributeGroup name="ScreenshotImageGroup">
    <xs:attribute name="DesktopImage">
      <xs:simpleType>
        <xs:restriction base="xs:string">
          <xs:maxLength value="255" />
        </xs:restriction>
      </xs:simpleType>
    </xs:attribute>
    <xs:attribute name="MobileImage">
      <xs:simpleType>
        <xs:restriction base="xs:string">
          <xs:maxLength value="255" />
        </xs:restriction>
      </xs:simpleType>
    </xs:attribute>
    <xs:attribute name="XboxImage">
      <xs:simpleType>
        <xs:restriction base="xs:string">
          <xs:maxLength value="255" />
        </xs:restriction>
      </xs:simpleType>
    </xs:attribute>
    <xs:attribute name="SurfaceHubImage">
      <xs:simpleType>
        <xs:restriction base="xs:string">
          <xs:maxLength value="255" />
        </xs:restriction>
      </xs:simpleType>
    </xs:attribute>
    <xs:attribute name="HoloLensImage">
      <xs:simpleType>
        <xs:restriction base="xs:string">
          <xs:maxLength value="255" />
        </xs:restriction>
      </xs:simpleType>
    </xs:attribute>
    <xs:attribute name="FallbackLanguage" type="tns:LangCodeString" />
  </xs:attributeGroup>

  <xs:simpleType name="CaptionStringContent">
    <xs:restriction base="xs:string">
      <xs:pattern value="\s*(\S(\r|\n|.){0,199}\s*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="CaptionString">
    <xs:simpleContent>
      <xs:extension base="tns:CaptionStringContent">
        <xs:attributeGroup ref="tns:ScreenshotImageGroup" />
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <xs:simpleType name="AssetPathString">
    <xs:restriction base="xs:string">
      <!-- Min 5 since it needs at least a single character filename, the period and a 3 letter extension (mp4/mov/png) -->
      <xs:minLength value="5" />
      <xs:maxLength value="255" />
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="AdditionalAssetType">
    <xs:attribute name="FileName" type="tns:AssetPathString" use="required"/>
    <xs:attribute name="FallbackLanguage" type="tns:LangCodeString" />
  </xs:complexType>

  <xs:simpleType name="TrailerImageDescriptionString">
    <xs:restriction base="xs:normalizedString">
      <xs:pattern value="\s*(\S(\r|\n|.){0,199}\s*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="TrailerImageType">
    <xs:simpleContent>
      <xs:extension base="tns:TrailerImageDescriptionString">
        <xs:attribute name="FileName" type="tns:AssetPathString" use="required"/>
        <xs:attribute name="FallbackLanguage" type="tns:LangCodeString" />
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <xs:simpleType name="TrailerTitleString">
    <xs:restriction base="tns:NonNullNormalizedString">
      <xs:pattern value="\s*(\S(\r|\n|.){0,254}\s*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="TrailerTitleType">
    <xs:simpleContent>
      <xs:extension base="tns:TrailerTitleString">
        <xs:attributeGroup ref="tns:LocIdAttribute"/>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <xs:simpleType name="ShortDescriptionString">
    <xs:restriction base="xs:normalizedString">
      <xs:pattern value="\s*(\S(\r|\n|.){0,499}\s*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="ShortTitleString">
    <xs:restriction base="xs:normalizedString">
      <xs:pattern value="\s*(\S(\r|\n|.){0,49}\s*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="SortTitleString">
    <xs:restriction base="xs:normalizedString">
      <xs:pattern value="\s*(\S(\r|\n|.){0,254}\s*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="VoiceTitleString">
    <xs:restriction base="xs:normalizedString">
      <xs:pattern value="\s*(\S(\r|\n|.){0,254}\s*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="DevStudioString">
    <xs:restriction base="xs:normalizedString">
      <xs:pattern value="\s*(\S(\r|\n|.){0,254}\s*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="RequirementString">
    <xs:restriction base="xs:string">
      <xs:pattern value="\s*(\S(\r|\n|.){0,199}\s*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="RecommendationString">
    <xs:restriction base="xs:string">
      <xs:pattern value="\s*(\S(\r|\n|.){0,199}\s*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="CopyrightString">
    <xs:restriction base="xs:string">
      <xs:pattern value="\s*(\S(\r|\n|.){0,199}\s*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="LicencseTermsString">
    <xs:restriction base="xs:string">
      <xs:pattern value="\s*(\S(\r|\n|.){0,9999}\s*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="SupportContactInfoString">
    <xs:restriction base="xs:string">
      <xs:pattern value="\s*(\S(\r|\n|.){1,2047}\s*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="URLString">
    <xs:restriction base="xs:anyURI">
      <xs:pattern value="\s*(\S(\r|\n|.){0,2047}\s*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="PrivacyPolicyURLString">
    <xs:restriction base="xs:anyURI">
      <xs:pattern value="\s*(\S(\r|\n|.){0,2047}\s*)?"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="NonNullNormalizedString">
    <xs:restriction base="xs:normalizedString">
      <xs:minLength value="1" />
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="AppStoreNameString">
    <xs:restriction base="xs:string"/>
  </xs:simpleType>

  <!-- We can't put an xs:choice inside of xs:all, but we want to be able to support both the    -->
  <!-- v1 and v2 names of these image types.  So, this is an interesting way to accomplish that. -->
  <xs:element name="StoreLogo9x16_or_PosterArt" abstract="true"/>
  <xs:element name="StoreLogo9x16" type="tns:AdditionalAssetType" substitutionGroup="tns:StoreLogo9x16_or_PosterArt"/>
  <xs:element name="PosterArt" type="tns:AdditionalAssetType" substitutionGroup="tns:StoreLogo9x16_or_PosterArt"/>

  <xs:element name="StoreLogoSquare_or_BoxArt" abstract="true"/>
  <xs:element name="StoreLogoSquare" type="tns:AdditionalAssetType" substitutionGroup="tns:StoreLogoSquare_or_BoxArt"/>
  <xs:element name="BoxArt" type="tns:AdditionalAssetType" substitutionGroup="tns:StoreLogoSquare_or_BoxArt"/>

  <xs:element name="PromotionalArt16x9_or_SquareHeroArt" abstract="true"/>
  <xs:element name="PromotionalArt16x9" type="tns:AdditionalAssetType" substitutionGroup="tns:PromotionalArt16x9_or_SquareHeroArt"/>
  <xs:element name="SquareHeroArt" type="tns:AdditionalAssetType" substitutionGroup="tns:PromotionalArt16x9_or_SquareHeroArt"/>

  <xs:element name="PromotionalArtwork2400X1200_or_HeroImage2400x1200" abstract="true"/>
  <xs:element name="PromotionalArtwork2400X1200" type="tns:AdditionalAssetType" substitutionGroup="tns:PromotionalArtwork2400X1200_or_HeroImage2400x1200"/>
  <xs:element name="HeroImage2400x1200" type="tns:AdditionalAssetType" substitutionGroup="tns:PromotionalArtwork2400X1200_or_HeroImage2400x1200"/>

  <xs:element name="XboxBrandedKeyArt_or_BrandedKeyArt" abstract="true"/>
  <xs:element name="XboxBrandedKeyArt" type="tns:AdditionalAssetType" substitutionGroup="tns:XboxBrandedKeyArt_or_BrandedKeyArt"/>
  <xs:element name="BrandedKeyArt" type="tns:AdditionalAssetType" substitutionGroup="tns:XboxBrandedKeyArt_or_BrandedKeyArt"/>

  <xs:element name="XboxTitledHeroArt_or_TitledHeroArt" abstract="true"/>
  <xs:element name="XboxTitledHeroArt" type="tns:AdditionalAssetType" substitutionGroup="tns:XboxTitledHeroArt_or_TitledHeroArt"/>
  <xs:element name="TitledHeroArt" type="tns:AdditionalAssetType" substitutionGroup="tns:XboxTitledHeroArt_or_TitledHeroArt"/>

  <xs:element name="XboxFeaturedPromotionalArt_or_FeaturedPromotionalArt" abstract="true"/>
  <xs:element name="XboxFeaturedPromotionalArt" type="tns:AdditionalAssetType" substitutionGroup="tns:XboxFeaturedPromotionalArt_or_FeaturedPromotionalArt"/>
  <xs:element name="FeaturedPromotionalArt" type="tns:AdditionalAssetType" substitutionGroup="tns:XboxFeaturedPromotionalArt_or_FeaturedPromotionalArt"/>

  <xs:element name="SquareIcon358X358_or_Square" abstract="true"/>
  <xs:element name="SquareIcon358X358" type="tns:AdditionalAssetType" substitutionGroup="tns:SquareIcon358X358_or_Square"/>
  <xs:element name="Square" type="tns:AdditionalAssetType" substitutionGroup="tns:SquareIcon358X358_or_Square"/>

  <xs:element name="BackgroundImage1000X800_or_Panoramic" abstract="true"/>
  <xs:element name="BackgroundImage1000X800" type="tns:AdditionalAssetType" substitutionGroup="tns:BackgroundImage1000X800_or_Panoramic"/>
  <xs:element name="Panoramic" type="tns:AdditionalAssetType" substitutionGroup="tns:BackgroundImage1000X800_or_Panoramic"/>

  <xs:element name="PromotionalArtwork414X180_or_HeroImage414x180" abstract="true"/>
  <xs:element name="PromotionalArtwork414X180" type="tns:AdditionalAssetType" substitutionGroup="tns:PromotionalArtwork414X180_or_HeroImage414x180"/>
  <xs:element name="HeroImage414x180" type="tns:AdditionalAssetType" substitutionGroup="tns:PromotionalArtwork414X180_or_HeroImage414x180"/>

  <xs:element name="ProductDescription">
    <xs:annotation>
      <xs:documentation>
        Root element of ProductDescription document type. For content guidance on all required and optional fields in the product description, see http://go.microsoft.com/fwlink/p/?linkid=221134.
      </xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:all>

        <!-- COMMON section-->

        <xs:element name="AppStoreName" minOccurs="0">
          <xs:complexType>
            <xs:annotation>
              <xs:documentation>
                Optional, the localized name for the application's Store listing if not available in the application package.
                This name must be reserved in the Developer Center for this application.
              </xs:documentation>
            </xs:annotation>
            <xs:simpleContent>
              <xs:extension base="tns:AppStoreNameString">
                <xs:attributeGroup ref="tns:LocIdAttribute"/>
              </xs:extension>
            </xs:simpleContent>
          </xs:complexType>
        </xs:element>

        <xs:element name="Keywords" minOccurs="0">
          <xs:annotation>
            <xs:documentation>
              Optional, may contain up to 7 Keyword elements (previous Phone limit was 5)
            </xs:documentation>
          </xs:annotation>
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Keyword" minOccurs="0" maxOccurs="7">
                <xs:complexType>
                  <xs:annotation>
                    <xs:documentation>
                      Each keyword may not exceed 30 characters. Modified for Phone, WinStore is 45 sharacters.
                    </xs:documentation>
                  </xs:annotation>
                  <xs:simpleContent>
                    <xs:extension base="tns:KeywordString">
                      <xs:attributeGroup ref="tns:LocIdAttribute"/>
                    </xs:extension>
                  </xs:simpleContent>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>

        <xs:element name="Description">
          <xs:complexType>
            <xs:annotation>
              <xs:documentation>
                Required, may not exceed 10000 characters (previous Phone limit was 2000).
              </xs:documentation>
            </xs:annotation>
            <xs:simpleContent>
              <xs:extension base="tns:DescriptionString">
                <xs:attributeGroup ref="tns:LocIdAttribute"/>
              </xs:extension>
            </xs:simpleContent>
          </xs:complexType>
        </xs:element>

        <xs:element name="ReleaseNotes" minOccurs="0">
          <xs:complexType>
              <xs:annotation>
                <xs:documentation>
                  Optional, may not exceed 1500 characters
                </xs:documentation>
            </xs:annotation>
            <xs:simpleContent>
              <xs:extension base="tns:NotesString">
                <xs:attributeGroup ref="tns:LocIdAttribute"/>
              </xs:extension>
            </xs:simpleContent>
          </xs:complexType>
        </xs:element>

        <xs:element name="ScreenshotCaptions" minOccurs="0">
          <xs:annotation>
            <xs:documentation>
              Optional, contains up to 9 elements per platform.
            </xs:documentation>
          </xs:annotation>
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Caption" minOccurs="0" maxOccurs="45">
                <xs:complexType>
                    <xs:annotation>
                      <xs:documentation>
                        Each Caption may not exceed 200 characters
                      </xs:documentation>
                  </xs:annotation>
                  <xs:simpleContent>
                    <xs:extension base="tns:CaptionString">
                      <xs:attributeGroup ref="tns:LocIdAttribute"/>
                    </xs:extension>
                  </xs:simpleContent>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
            <xs:attribute name="FallbackLanguage" type="tns:LangCodeString" />
          </xs:complexType>
        </xs:element>

        <xs:element name="AdditionalAssets" minOccurs="0">
          <xs:annotation>
            <xs:documentation>
              Optional, contains additional assets for the listing that don't have any localizable text.
              For more info: https://docs.microsoft.com/en-us/windows/uwp/publish/app-screenshots-and-images
            </xs:documentation>
          </xs:annotation>
          <xs:complexType>
            <xs:all>
              <xs:element ref="tns:StoreLogo9x16_or_PosterArt" minOccurs="0" />
              <xs:element ref="tns:StoreLogoSquare_or_BoxArt" minOccurs="0" />
              <xs:element name="Icon" type="tns:AdditionalAssetType" minOccurs="0" />
              <xs:element ref="tns:PromotionalArt16x9_or_SquareHeroArt" minOccurs="0" />
              <xs:element ref="tns:PromotionalArtwork2400X1200_or_HeroImage2400x1200" minOccurs="0" />
              <xs:element ref="tns:XboxBrandedKeyArt_or_BrandedKeyArt" minOccurs="0" />
              <xs:element ref="tns:XboxTitledHeroArt_or_TitledHeroArt" minOccurs="0" />
              <xs:element ref="tns:XboxFeaturedPromotionalArt_or_FeaturedPromotionalArt" minOccurs="0" />
              <xs:element ref="tns:SquareIcon358X358_or_Square" minOccurs="0" />
              <xs:element ref="tns:BackgroundImage1000X800_or_Panoramic" minOccurs="0" />
              <xs:element ref="tns:PromotionalArtwork414X180_or_HeroImage414x180" minOccurs="0" />
              <xs:element name="HeroImage846x468" type="tns:AdditionalAssetType" minOccurs="0" />
              <xs:element name="HeroImage558x756" type="tns:AdditionalAssetType" minOccurs="0" />
              <xs:element name="HeroImage414x468" type="tns:AdditionalAssetType" minOccurs="0" />
              <xs:element name="HeroImage558x558" type="tns:AdditionalAssetType" minOccurs="0" />
              <xs:element name="ScreenshotWXGA" type="tns:AdditionalAssetType" minOccurs="0" />
              <xs:element name="ScreenshotHD720" type="tns:AdditionalAssetType" minOccurs="0" />
              <xs:element name="ScreenshotWVGA" type="tns:AdditionalAssetType" minOccurs="0" />
              <xs:element name="SmallMobileTile" type="tns:AdditionalAssetType" minOccurs="0" />
              <xs:element name="SmallXboxLiveTile" type="tns:AdditionalAssetType" minOccurs="0" />
              <xs:element name="LargeMobileTile" type="tns:AdditionalAssetType" minOccurs="0" />
              <xs:element name="LargeXboxLiveTile" type="tns:AdditionalAssetType" minOccurs="0" />
              <xs:element name="Tile" type="tns:AdditionalAssetType" minOccurs="0" />
              <xs:element name="DesktopIcon" type="tns:AdditionalAssetType" minOccurs="0" />
              <xs:element name="AchievementIcon" type="tns:AdditionalAssetType" minOccurs="0" />
              <xs:element name="ChallengePromoIcon" type="tns:AdditionalAssetType" minOccurs="0" />
              <xs:element name="RewardDisplayIcon" type="tns:AdditionalAssetType" minOccurs="0" />
              <xs:element name="Icon150x150" type="tns:AdditionalAssetType" minOccurs="0" />
              <xs:element name="Icon71x71" type="tns:AdditionalAssetType" minOccurs="0" />
              <xs:element name="DoubleWide" type="tns:AdditionalAssetType" minOccurs="0" />
            </xs:all>
            <xs:attribute name="FallbackLanguage" type="tns:LangCodeString" />
          </xs:complexType>
        </xs:element>

        <xs:element name="Trailers" minOccurs="0">
          <xs:annotation>
            <xs:documentation>
              Optional, contains up to 15 elements.
            </xs:documentation>
          </xs:annotation>
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Trailer" minOccurs="0" maxOccurs="15">
                <xs:complexType>
                  <xs:all>
                    <xs:element name="Title" type="tns:TrailerTitleType" minOccurs="1" />
                    <xs:element name="Images" minOccurs="1">
                      <xs:annotation>
                        <xs:documentation>
                          Only one image/screenshot is permitted (and required) per trailer.
                        </xs:documentation>
                      </xs:annotation>
                      <xs:complexType>
                        <xs:all>
                          <xs:element name="Image" type="tns:TrailerImageType" minOccurs="1" maxOccurs="1"/>
                        </xs:all>
                        <xs:attribute name="FallbackLanguage" type="tns:LangCodeString" />
                      </xs:complexType>
                    </xs:element>
                  </xs:all>
                  <xs:attribute name="FileName" type="tns:AssetPathString" use="required"/>
                  <xs:attribute name="FallbackLanguage" type="tns:LangCodeString" />
                </xs:complexType>
              </xs:element>
            </xs:sequence>
            <xs:attribute name="FallbackLanguage" type="tns:LangCodeString" />
          </xs:complexType>
        </xs:element>

        <xs:element name="ShortDescription" minOccurs="0">
          <xs:complexType>
            <xs:annotation>
              <xs:documentation>
                Optional, Only used for games. This description appears in the Information section of the Game Hub on Xbox One, and helps customers understand more about your game. May not exceed 500 characters.
              </xs:documentation>
            </xs:annotation>
            <xs:simpleContent>
              <xs:extension base="tns:ShortDescriptionString">
                <xs:attributeGroup ref="tns:LocIdAttribute"/>
              </xs:extension>
            </xs:simpleContent>
          </xs:complexType>
        </xs:element>

        <xs:element name="ShortTitle" minOccurs="0">
          <xs:complexType>
            <xs:annotation>
              <xs:documentation>
                Optional,  A shorter version of your product's name. If provided, this shorter name may appear in various places on Xbox One (during installation, in Achievements, etc.) in place of the full title of your product.  May not exceed 50 characters.
              </xs:documentation>
            </xs:annotation>
            <xs:simpleContent>
              <xs:extension base="tns:ShortTitleString">
                <xs:attributeGroup ref="tns:LocIdAttribute"/>
              </xs:extension>
            </xs:simpleContent>
          </xs:complexType>
        </xs:element>

        <xs:element name="SortTitle" minOccurs="0">
          <xs:complexType>
            <xs:annotation>
              <xs:documentation>
                Optional,  If your product could be alphabetized in different ways, you can enter another version here. This may help customers find the product more quickly when searching.  May not exceed 255 characters.
              </xs:documentation>
            </xs:annotation>
            <xs:simpleContent>
              <xs:extension base="tns:SortTitleString">
                <xs:attributeGroup ref="tns:LocIdAttribute"/>
              </xs:extension>
            </xs:simpleContent>
          </xs:complexType>
        </xs:element>

        <xs:element name="VoiceTitle" minOccurs="0">
          <xs:complexType>
            <xs:annotation>
              <xs:documentation>
                Optional,  An alternate name for your product that, if provided, may be used in the audio experience on Xbox One when using Kinect or a headset.   May not exceed 255 characters.
              </xs:documentation>
            </xs:annotation>
            <xs:simpleContent>
              <xs:extension base="tns:VoiceTitleString">
                <xs:attributeGroup ref="tns:LocIdAttribute"/>
              </xs:extension>
            </xs:simpleContent>
          </xs:complexType>
        </xs:element>

        <xs:element name="DevStudio" minOccurs="0">
          <xs:complexType>
            <xs:annotation>
              <xs:documentation>
                Optional,  Specify this value if you want to include a "Developed by" field in the listing. (The "Published by" field will list the publisher display name associated with your account, whether or not you provide a DevStudio value.)  May not exceed 255 characters.
              </xs:documentation>
            </xs:annotation>
            <xs:simpleContent>
              <xs:extension base="tns:DevStudioString">
                <xs:attributeGroup ref="tns:LocIdAttribute"/>
              </xs:extension>
            </xs:simpleContent>
          </xs:complexType>
        </xs:element>

        <!-- Windows client only section-->

        <xs:element name="AppFeatures" minOccurs="0">
          <xs:annotation>
            <xs:documentation>
              Optional, may contain up to 20 feature elements
            </xs:documentation>
          </xs:annotation>
          <xs:complexType>
            <xs:sequence>
              <xs:element name="AppFeature" minOccurs="0" maxOccurs="20">
                <xs:complexType>
                  <xs:annotation>
                    <xs:documentation>
                      Each Feature description may not exceed 200 characters
                    </xs:documentation>
                  </xs:annotation>
                  <xs:simpleContent>
                    <xs:extension base="tns:AppFeatureString">
                      <xs:attributeGroup ref="tns:LocIdAttribute"/>
                    </xs:extension>
                  </xs:simpleContent>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>

        <xs:element name="RecommendedHardware" minOccurs="0">
          <xs:annotation>
            <xs:documentation>
              Optional, may contain up to 11 elements
            </xs:documentation>
          </xs:annotation>
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Recommendation" minOccurs="0" maxOccurs="11">
                <xs:complexType>
                  <xs:annotation>
                    <xs:documentation>
                      Each recommendation may not exceed 200 characters
                    </xs:documentation>
                  </xs:annotation>
                  <xs:simpleContent>
                    <xs:extension base="tns:RecommendationString">
                      <xs:attributeGroup ref="tns:LocIdAttribute"/>
                    </xs:extension>
                  </xs:simpleContent>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>

        <xs:element name="MinimumHardware" minOccurs="0">
          <xs:annotation>
            <xs:documentation>
              Optional, may contain up to 11 elements
            </xs:documentation>
          </xs:annotation>
          <xs:complexType>
            <xs:sequence>
              <xs:element name="MinimumRequirement" minOccurs="0" maxOccurs="11">
                <xs:complexType>
